/* test/pages/play/play.wxss */
.play-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #1c1c1c;
  color: #fff;
  height: 100vh;
  padding-top: 40rpx;
  position: relative; /* 添加相对定位 */
}

.back-btn {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.back-btn image {
  width: 100%;
  height: 100%;
}

.play-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #1c1c1c;
  color: #fff;
  height: 100vh;
  padding-top: 40rpx;
}

.top-info {
  text-align: center;
  margin-bottom: 30rpx;
}

.song-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.singer {
  font-size: 28rpx;
  color: #ccc;
  margin-top: 10rpx;
  display: block;
}

.cover-container {
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.cover-img {
  width: 100%;
  height: 100%;
}

.lyric-scroll {
  width: 80%;
  margin-bottom: 40rpx;
}

.lyric-item {
  font-size: 26rpx;
  margin: 10rpx 0;
  text-align: center;
  color: #ccc;
}

.bottom-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.control-btn {
  width: 60rpx;
  height: 60rpx;
  margin: 0 30rpx;
}

.play-pause {
  width: 80rpx;
  height: 80rpx;
}

.progress-area {
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.progress-slider {
  flex: 1;
  margin: 0 20rpx;
}

.time {
  font-size: 24rpx;
  color: #ccc;
}

/* 评论区整体容器 */
.comment-section {
  padding: 20rpx;
  background: #fff;
  margin-top: 30rpx;
}

/* 评论标题 */
.comment-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

/* 评论列表（滚动容器） */
.comment-list {
  border: 1px solid #eee;
  border-radius: 10rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

/* 单条评论 */
.comment-item {
  padding: 15rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

/* 用户名 */
.comment-user {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block; /* 独占一行 */
}

/* 评论内容 */
.comment-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 输入区域布局 */
.comment-input {
  display: flex;
  align-items: flex-end; /* 对齐textarea底部（因auto-height） */
  margin-top: 15rpx;
}

/* textarea */
.comment-textarea {
  flex: 1;
  min-height: 80rpx; /* 最小高度 */
  border: 1px solid #ccc;
  border-radius: 30rpx;
  padding: 15rpx 20rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}

/* 发送按钮 */
.send-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #ff3333;
  color: #fff;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}