  margin: 20rpx;

}
.swiItem{
  width: 100%;
  overflow: hidden;
}
.swiItem image {
  width: 100%;              /* 宽度填满父容器 */
  height: 100%;             /* 高度填满父容器 */
  display: block;           /* 消除inline-block的底部空隙 */
}
/*以上为轮播图*/
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}


/* 推荐歌手 */


/* 滚动容器：核心是 flex 布局 + 滚动设置 */
.singer-scroll {
  display: flex;          /* 让子元素横向排列 */
  flex-direction: row !important; /* 强制横向，覆盖全局样式 */
  padding: 0 30rpx;       /* 左右留空，避免按钮贴边 */
  box-sizing: border-box; 
  overflow-x: scroll;     /* 强制横向滚动 */
  -webkit-overflow-scrolling: touch; 
  scrollbar-width: none;  /* 隐藏滚动条 */
}
/* 按钮：控制间距 + 禁止收缩 */
.singer-btn {
  flex-shrink: 0;         /* 禁止按钮收缩*/
  margin-right: 30rpx;    /* 按钮之间的间隙 */
  padding: 16rpx 32rpx;   
  background: #F5F5F5;    
  border-radius: 30rpx;   
  font-size: 28rpx;       
  text-align: center;     
  color: #333;
  /*按钮文字*/
  justify-content: center;
  align-items: center;
}

/* 清除右边距，避免多余空隙 */
.singer-btn:last-child {
  margin-right: 0;
}


/*甄选歌单*/


/* 歌单模块容器：上下留空 */
.playlist-section {
  padding: 30rpx 20rpx;
}

/* 模块标题：加粗 + 字号 */
.playlist-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block; /* 独占一行 */
}

/* 横向滚动容器：核心布局 */
.playlist-scroll {
  display: flex;          /* 横向排列 */
  overflow-x: scroll;     /* 强制滚动 */
  -webkit-overflow-scrolling: touch; /* iOS 滑动更丝滑 */
  scrollbar-width: none;  /* 隐藏滚动条 */
}

/* 单个歌单项：固定宽度 + 间距 */
.playlist-item {
  flex-shrink: 0;         /* 禁止收缩，保证宽度一致 */
  width: 240rpx;
  margin-right: 20rpx;    /* 项之间的间距 */
  display: flex;
  flex-direction: column; /* 图片在上，文字在下 */
  align-items: center;    /* 水平居中 */
}

/* 最后一个歌单项：清除右边距 */
.playlist-item:last-child {
  margin-right: 0;
}

/* 歌单图片：圆角 + 比例 */
.playlist-item image {
  width: 100%;
  height: 240rpx;
  border-radius: 16rpx;   /* 圆角 */
}

/* 歌单文字：居中 + 单行省略 */
.playlist-text {
  margin-top: 12rpx;
  font-size: 26rpx;
  text-align: center;
  width: 100%;
  /* 文字超出一行时省略 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;  /* 只显示1行 */
  -webkit-box-orient: vertical;
}


