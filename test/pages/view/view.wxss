/* pages/view/view.wxss */
.header .search {
  /* 核心：Flex 布局 */
  display: flex; 
  align-items: center; /* 垂直居中 */
  border: 1rpx solid #eee;
  margin: 0 10rpx;
  border-radius: 10rpx;
  height: 60rpx; 
  overflow: hidden; /* 圆角 */
}

/* 左侧logo */
.header .search .search-icon {
  width: 40rpx;   
  height: 40rpx;  
  margin-left: 10rpx; /* 图标与左侧间距 */
  border-radius: 50%; 
}

/* 输入框样式 */
.header .search input {
  flex: 1; /* 占满剩余空间 */
  font-size: 26rpx;
  color: #d43c33;
  padding: 0 10rpx; /* 输入框内边距 */
  line-height: 60rpx; /* 与父容器高度一致，垂直居中 */
  background: transparent; /* 透明背景 */
  border: none; /* 去掉默认边框 */
  outline: none; /* 去掉聚焦时的默认外边框 */
}
.swiBox{
  width: 708rpx;
