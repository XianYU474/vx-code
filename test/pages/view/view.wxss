}

/* 滚动容器 */
.song-scroll {
  height: 600rpx; 
  overflow: hidden;
  -webkit-overflow-scrolling: touch; 
}

/* 歌曲列表 */
.song-list {
  padding: 10rpx 0;
}
.song-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

/* 封面图 */
.song-cover {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

/* 文字信息 */
.song-info {
  flex: 1; /* 占满剩余空间 */
}
.song-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.song-tag {
  display: inline-block;
  background: #f0f0f0;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  margin: 5rpx 0;
}
.song-desc, .song-singer {
  display: block;
  margin-top: 4rpx;
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

