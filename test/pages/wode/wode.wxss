/* pages/wode/wode.wxss */
/* 容器：占满屏幕，上下分栏 */
.wode-container {
  width: 100%;
  height: 100vh; /* 满屏 */
  font-size: 28rpx;
  display: flex;
  flex-direction: column; /* 垂直排列上下部分 */
}

/* 上半部分：占50%高度 + 允许溢出 */
.top-section {
  position: relative;
  flex: 1; /* 等价于 height: 50vh（因父容器是flex布局） */
  overflow: visible; /* 允许头像和文字溢出容器 */
}

/* 背景图：覆盖上半部分 + 模糊效果（可选） */
.bg-img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 保持比例覆盖 */
}

/* 头像：圆形 */
.avatar {
  position: absolute;
  bottom: -60rpx; 
  left: 50%;
  transform: translateX(-50%); /* 水平居中 */
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #fff; /* 白色边框 */
}

/* 用户信息：定位在头像正下方 */
.user-info {
  position: absolute;
  top: calc(100% + 20rpx); /* 上半部分底部 + 20rpx间距 */
  left: 50%;
  transform: translateX(-50%); /* 水平居中 */
  text-align: center;
  color: #fff; /* 白色文字 */
  width: 100%;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.signature {
  font-size: 26rpx;
  opacity: 0.8;
  display: block;
  margin-bottom: 8rpx;
}

.vip-tag {
  font-size: 24rpx;
  color: #ffd700; /* VIP标识 */
}

/* 下半部分：占50%高度 + 可滑动 */
.bottom-section {
  flex: 1; 
  padding: 120rpx 20rpx 20rpx; 
  box-sizing: border-box;
  background: #fff;
  overflow-y: scroll; /* 确保可滑动 */
  -webkit-overflow-scrolling: touch;
}

/* 歌单项：flex布局 */
.playlist-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.playlist-cover {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.playlist-info {
  flex: 1;
}

.playlist-title {
  font-size: 30rpx;
  font-weight: bold;
  display: block; 
  margin-bottom: 6rpx;
}

.playlist-desc {
  font-size: 26rpx;
  color: #999;
  display: block; 
}