/* pages/jay/jay.wxss */
/* 页面容器 */
.jay-container {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
}
/* 关闭按钮样式 */
.close-btn {
  position: absolute;   
  top: 30rpx;           
  left: 20rpx;          
  font-size: 40rpx;     
  color: #fff;          
  z-index: 999;        
  text-decoration: none;/* 清除 navigator 默认下划线 */
}

.close-btn:active {
  transform: scale(0.9); /* 点击时缩小*/
  transition: transform 0.3s;
}

/* 顶部背景区：相对定位，承载背景图和悬浮卡片 */
.jay-header {
  position: relative;
  height: 700rpx; /* 背景图高度*/
  overflow: hidden; /* 裁剪溢出内容 */
}
.header-bg {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 保持比例，覆盖容器 */
}

/* 悬浮艺人卡片：绝对定位，底部溢出背景图 */
.jay-card {
  position: absolute;
  bottom: -60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1);
  padding: 30rpx;
  box-sizing: border-box;
}
.name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}
.en-name {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 15rpx;
  display: block;
}
.fans {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}
.tags {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 20rpx;
  display: block;
}
.follow-row {
  display: flex;
  align-items: center;
  justify-content: center;
}
.follow-btn {
  background: #eee;
  color: #999;
  padding: 10rpx 30rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}
.arrow {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

/* 热门作品区：距离卡片留出空间 */
.hot-section {
  padding: 80rpx 20rpx 20rpx; /* 顶部留出卡片高度+间距 */
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.work-swiper {
  width: 100%;
  height: 200rpx; /* 轮播图高度 */
}
.work-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx; /* 每个作品宽度 */
  margin-right: 20rpx;
}
.cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}
.work-name {
  font-size: 24rpx;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.comment-tag {
  font-size: 20rpx;
  color: #ff4d4f;
  margin-top: 5rpx;
  display: block;
}
.play-btn {
  margin-top: 20rpx;
  background: #ff3333;
  color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

/* 艺人百科 */
.bio-section {
  padding: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 20rpx;
}
.bio-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}
.bio-content {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.bio-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}